{{!< default}}
   {{#post}}
     {{> 'page_header' }}
      <!-- Start content -->
      <div class="themeix-content p-100">
         <div class="container">
            <div class="row">
               <div class="col-md-10 mx-auto">
                  <div class="single-content">
                     {{#if feature_image}}
                       <div class="single-img"><img src="{{img_url feature_image}}" alt="{{title}}"/></div>
                     {{/if}}
                     <div class="meta-post">
                        <div class="row">
                           <div class="col-md-6 col-sm-6">
                              <div class="meta-author text-left">
                                 <ul class="list-inline">
                                    <li class="list-inline-item"><a href="#"><i class="fa fa-user" aria-hidden="true"></i> {{author}}</a></li>
                                    <li class="list-inline-item"><i class="fa fa-clock-o" aria-hidden="true"></i> {{date published_at  format="DD MMM, Y"}}</li>
                                 </ul>
                              </div>
                           </div>
						   {{#if tags}}
                           <div class="col-md-6 col-sm-6">
                              <div class="meta-category text-right">
                                 <ul class="list-inline">
                                    <li class="list-inline-item"> <a href="#"><i class="fa fa-tag" aria-hidden="true"></i> {{tags limit="1"}}</a></li>
                                 </ul>
                              </div>
                           </div>
						   {{/if}}
                        </div>
                     </div>
                     <p>{{content}}</p>

                     <div class="single-post-footer">
                        <div class="row">
                           <div class="col-md-6 col-sm-6">
                              <div class="single-social text-left">
                                 <ul class="list-inline">
                                    <li class="list-inline-item"><a href="https://facebook.com/sharer.php?url={{url absolute='true'}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li class="list-inline-item"><a href="http://twitter.com/share?text={{encode title}}&amp;url={{url absolute='true'}}"  onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li class="list-inline-item"><a href="http://plus.google.com/share?text={{encode title}}&amp;url={{url absolute='true'}}"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                                    <li class="list-inline-item"><a href="http://pinterest.com/pin/create/button/?{{url absolute='true'}}&amp;media={{feature_image}}" onclick="window.open(this.href, 'pinterest-share', 'width=490,height=530');return false;"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                 </ul>
                              </div>
                           </div>
                           <div class="col-md-6 col-sm-6">
                              <div class="single-pagination text-right">
                                 {{#prev_post}}
                                   <a href="{{url}}"><i class="fa fa-angle-left" aria-hidden="true"></i> previous</a>
                                 {{/prev_post}}
                                 {{#next_post}}
                                   <a href="{{url}}">next <i class="fa fa-angle-right" aria-hidden="true"></i></a>
                                 {{/next_post}}
                              </div>
                           </div>
                        </div>
                     </div>
                     <div class="post-comments">
                        {{> 'post_comments'}}
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- End content -->
     {{/post}}