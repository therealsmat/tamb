<div class="themeix-pagination">
    <div class="row">
        <div class="col-sm-8">
            <nav class="page-pagination text-right">
                <ul class="pagination">
                  {{#if prev}}
                   <li class="page-item">
                      <a class="page-link" href="{{page_url prev}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo; {{t "Older Posts"}}</span>
                        <span class="sr-only">{{t "Older Posts"}}</span>
                      </a>
                    </li>
                    {{/if}}
                    {{#if next}}
                    <li class="page-item">
                      <a class="page-link" href="{{page_url next}}" aria-label="Next">
                        <span aria-hidden="true"> {{t "Newer Posts"}} &raquo;</span>
                        <span class="sr-only"> {{t "Newer Posts"}}</span>
                      </a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
        </div>
        <div class="col-sm-4">
            <div class="page-count text-right">
                <p> {{t "Page {page} of {pages}" page=page pages=pages}} </p>
            </div>
        </div>
    </div>
</div>